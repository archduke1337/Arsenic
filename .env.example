# ===== APPWRITE CONFIGURATION =====
# Get these from Appwrite Console: https://tor.cloud.appwrite.io

# Public API Endpoint
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://tor.cloud.appwrite.io/v1

# Project ID
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id_here

# Database ID
NEXT_PUBLIC_APPWRITE_DATABASE_ID=your_database_id_here

# Storage Bucket ID (for uploads)
NEXT_PUBLIC_APPWRITE_STORAGE_BUCKET_ID=your_bucket_id_here

# ===== PRIVATE APPWRITE CONFIGURATION =====
# These are only used on the backend and should be kept secret

APPWRITE_ENDPOINT=https://tor.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_API_KEY=your_api_key_here

# ===== EMAIL CONFIGURATION =====
# Choose one email provider below

# Gmail SMTP (Simple)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# OR Custom SMTP (Advanced)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SECURE=false

# Email from address
EMAIL_FROM=noreply@arsenic-summit.com

# ===== PAYMENT GATEWAY - RAZORPAY =====
# Get from: https://dashboard.razorpay.com/app/keys

NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxxxxxx
RAZORPAY_SECRET=razorpay_secret_xxxxxxxxxxxxxx

# ===== PAYMENT GATEWAY - EASEBUZZ =====
# Get from: https://dashboard.easebuzz.in/

EASEBUZZ_MERCHANT_KEY=your_merchant_key_here
EASEBUZZ_SALT=your_salt_here
EASEBUZZ_ENV=test

# ===== APPLICATION CONFIGURATION =====

# Application URL (for redirects, emails, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Admin emails (comma-separated, for role checking)
ADMIN_EMAILS=admin@arsenic-summit.com,organizer@arsenic-summit.com

# Port (for development)
PORT=3000

# ===== ANALYTICS & MONITORING (Optional) =====

# Sentry DSN (Error tracking)
NEXT_PUBLIC_SENTRY_DSN=

# Google Analytics ID
NEXT_PUBLIC_GA_ID=

# ===== FEATURE FLAGS (Optional) =====

# Enable/disable features
ENABLE_QR_CHECK_IN=true
ENABLE_PAYMENT=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_LIVE_SCORING=false
ENABLE_FORUM=false
ENABLE_PWA=true
